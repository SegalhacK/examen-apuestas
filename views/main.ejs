<%- include('templates/header') %>

    <div class="container p-4">
        <h1 class="text-center">Bienvenido a la subasta secreta!</h1>
        <div class="row">
            <!-- Koenigsegg -->
            <div class="card col-md-3 bg-dark text-light p-3" style="width: 18rem;">
                <img src="/img/c1.jpg" class="card-img-top rounded" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Koenigsegg Gamera</h5>
                    <p class="card-text">Auto de la gran flauta.</p>
                    <form action="/add" method="post">
                        <input required type="text" name="amount">
                        <div class="text-center p-2">
                            <input type="hidden" name="product" value="1">
                            <input type="submit" class="btn btn-primary" value="Rematar">
                        </div>
                    </form>
                </div>
                <div class="card-title mt-3">
                    <h4 class="text-center">Ofertas actuales</h4>
                </div>
                <div class="card-body">
                    <ul id="myUL">
                        <% for( let subasta of subastas ) { %>
                            <% if (subasta.product == 1) { %>
                                <li>
                                    <%= subasta.User.name%>: $<%= subasta.amount%>
                                </li>
                            <% } %>
                        <% } %>
                    </ul>
                </div>
                <%- include('templates/search') %>
